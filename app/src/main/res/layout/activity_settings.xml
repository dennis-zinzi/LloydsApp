<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/lloyds_green"
    tools:context="uk.ac.ncl.csc2022.team10.lloydsapp.SettingsActivity" >

    <ImageView
        android:id="@+id/bankLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/lloyds_bank_logo"
        android:layout_above="@+id/topUp_button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <Button
        android:id="@+id/passwordChange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Change Password"
        android:layout_above="@+id/currencyChange"
        android:layout_alignRight="@+id/currencyChange"
        android:layout_alignEnd="@+id/currencyChange" />

    <Button
        android:id="@+id/currencyChange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Change Currency"
        android:layout_marginBottom="45dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>